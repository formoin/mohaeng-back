<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.todo.model.mapper.TodoMapper">


    <select id="getTodoList" resultType="todo" parameterType="int">
        select todo_id, content, checked
        from todo
        where group_id=#{groupId}
    </select>

    <delete id="delete" parameterType="int">
        delete from todo
        where todo_id=#{todoId}
    </delete>

    <insert id="insert" parameterType="todo">
        insert into todo (content, group_id)
        values (#{content}, #{groupId})
    </insert>
    
    <update id="update" parameterType="todo">
    	update todo
    	set checked=#{checked}
    	where todo_id=#{todoId}
    </update>

</mapper>