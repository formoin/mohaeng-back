<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.group.model.mapper.GroupUserMapper">
	<select id="getGroupUsers" parameterType="int" resultType="user">
		select
		u.id, u.user_id, u.user_name, u.img
		from user u inner join groupuser g
		on
		g.user_id = u.id
		where g.group_id=#{groupId}
	</select>
	<delete id="deleteGroupUserList" parameterType="int">
		delete from groupuser
		where group_id = #{groupId}
	</delete>
	<insert id="insertGroupUserList" parameterType="list">
		insert into groupuser
		(user_id, group_id)
		values 
		<foreach collection="list" item="item" index="idx" separator=",">
			(
				#{item.userId},
				#{item.groupId}
			)
		</foreach>

	</insert>
	

</mapper>
